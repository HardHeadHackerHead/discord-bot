# Discord Bot Configuration
BOT_TOKEN=your_bot_token_here
CLIENT_ID=your_client_id_here

# Development Settings
# Set to your Discord server ID for instant command updates during development
DEV_GUILD_ID=your_dev_guild_id_here

# Environment (development | production)
NODE_ENV=development

# Database Configuration
# Format: mysql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=mysql://root:password@localhost:3306/quadslab_bot

# Logging
# Options: debug | info | warn | error
LOG_LEVEL=debug

# Website Integration
# Base URL of your website (e.g., https://quadhlab.com)
WEBSITE_URL=
# Shared secret for authenticating with the website API
WEBSITE_WEBHOOK_SECRET=
# Port for the webhook server (default: 3001)
WEBHOOK_SERVER_PORT=3001

# Ngrok Tunnel (for local development)
# Set to true to automatically start ngrok tunnel
NGROK_ENABLED=false
# Your ngrok auth token (optional - get from ngrok.com for stable URLs)
NGROK_AUTH_TOKEN=
# Ngrok region: us, eu, ap, au, sa, jp, in
NGROK_REGION=us
