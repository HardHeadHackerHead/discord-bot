{
  "name": "quadslab-bot",
  "version": "1.0.0",
  "description": "A modular Discord bot framework with dynamic module loading and runtime migrations",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc && npm run copy:migrations",
    "copy:migrations": "node -e \"const fs=require('fs');const path=require('path');function copyDir(src,dest){if(!fs.existsSync(src))return;fs.mkdirSync(dest,{recursive:true});fs.readdirSync(src).forEach(f=>{const srcPath=path.join(src,f),destPath=path.join(dest,f);fs.statSync(srcPath).isDirectory()?copyDir(srcPath,destPath):fs.copyFileSync(srcPath,destPath);})}; fs.readdirSync('src/modules').forEach(m=>{const migSrc=path.join('src/modules',m,'migrations');const migDest=path.join('dist/modules',m,'migrations');copyDir(migSrc,migDest);});\"",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "mcp:start": "node dist/mcp-server.js",
    "docker:switch": "powershell -ExecutionPolicy Bypass -File ./scripts/switch-to-docker.ps1",
    "local:switch": "powershell -ExecutionPolicy Bypass -File ./scripts/switch-to-local.ps1",
    "docker:sync-to": "powershell -ExecutionPolicy Bypass -File ./scripts/sync-db-to-docker.ps1",
    "docker:sync-from": "powershell -ExecutionPolicy Bypass -File ./scripts/sync-db-from-docker.ps1"
  },
  "keywords": [
    "discord",
    "bot",
    "modular",
    "framework"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@discord-player/opus": "^7.1.0",
    "@discordjs/voice": "^0.19.0",
    "@fastify/rate-limit": "^10.3.0",
    "@modelcontextprotocol/sdk": "^1.25.2",
    "@prisma/client": "^5.22.0",
    "@snazzah/davey": "^0.1.9",
    "chart.js": "^4.5.1",
    "chartjs-node-canvas": "^5.0.0",
    "discord.js": "^14.16.3",
    "dotenv": "^16.4.5",
    "fast-xml-parser": "^5.3.3",
    "fastify": "^5.6.2",
    "mysql2": "^3.11.4",
    "opusscript": "^0.0.8",
    "sharp": "^0.34.5",
    "uuid": "^11.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "prisma": "^5.22.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
